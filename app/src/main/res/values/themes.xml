<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FotoKui" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FotoKui.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customHeader" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="customSubHeader" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">27sp</item>
    </style>
    <style name="customTitle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="customSubtitle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="customDescription" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>